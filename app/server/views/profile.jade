extend layout
block content
	.container-fluid
		.row
			.page-header.text-center
				h1
					span.fa.fa-cog.fa-spin
					|  My Profile
				button#profile(style = "display:block" type="button" onclick="goTo(\"\/home\")")
					span.fa.fa-phone
					|  Conference Mode
				button#profile(style = "display:block" type="button" onclick="goTo(\"\/logout\")")
					span.fa.fa-sign-out
					|  Logout
		.row
			// LOCAL INFORMATION
			.col-sm-6
				.well
					h3
						span.fa.fa-home
						|  My details
					p
						strong Name: #{user.fname} #{user.lname}
					p
						strong Email: #{user.email}

		.row
			h4
				- if (user.admin)
					span.fa.fa-users
					a(href="/signup")  Create new acount
