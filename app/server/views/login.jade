extend layout
block content
	.container-fluid
		.col-sm-4.col-sm-offset-4
			h1
				span.fa.fa-sign-in
				|  Login
			if message.length>0
				.alert.alert-danger= message

			// LOGIN FORM
			form(action="/login", method="post")
				.form-group
					label Username (email)
					input.form-control(type="email", name="email",autofocus, required)
				.form-group
					label Password
					input.form-control(type="password", name="password",required)
				button.btn.btn-warning.btn-lg(type="submit") Login
			p
				| Forgot password?
				a(href="/forgotpass") Click here!
